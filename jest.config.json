{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/tests/**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "verbose": true,
  "clearMocks": true,
  "restoreMocks": true,
  "transformIgnorePatterns": [
    "node_modules/(?!(uuid)/)"
  ],
  "extensionsToTreatAsEsm": [],
  "globals": {
    "jest": {
      "useESM": false
    }
  }
}